% Frame title
% In beamerouterthemewildcat.sty
\defbeamertemplate*{frametitle}{texsx}[1][]
{
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.5cm]{frametitle}
    \begin{tikzpicture}
      \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
      \ifx\insertframesubtitle\@empty%
        {\node[anchor=west, frametitle.fg,font=\Large, text width=0.8\paperwidth, align=right] at (0.95*\the\paperwidth,0.61){\RTL\fontspec{AbarLow-Black}\insertframetitle};}
        \else%
        {\node[anchor= west, frametitle.fg,font=\large, text width=0.8\paperwidth, align=right] at (0.95*\the\paperwidth,0.81){\RTL\fontspec{AbarLow-Black}\insertframetitle};%
          \node[anchor= west, frametitle.fg,font=\small, text width=0.8\paperwidth, align=right] at (0.95*\the\paperwidth,0.41){\RTL\fontspec{AbarLow-Black}\insertframesubtitle};}%
      \fi
    \end{tikzpicture}
  \end{beamercolorbox}
}
